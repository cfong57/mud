#include <mudlib.h>

inherit ARMOR;

void extra_create() 
{
  set_identified(1);
  set_short("An old gold ring");
  set_long(wrap("Other than being an exemplary piece of craftsmanship, there "+
  "does not seem to be anything particularly special about this ring. It "+
  "does not have any sort of magical aura, nor are there any markings on "+
  "it to indicate its true nature. You wonder what its purpose is.\n"));
  set_id(({"old gold ring", "old ring", "gold ring", "ring" }));
  set_name("old ring");
  set_slots(({"finger"}));
  set_material("gold");
  set_type("full plate");
  set_type_desc("ring");
  set_quality(75);
  set_size(175);
  armour_setup();
}