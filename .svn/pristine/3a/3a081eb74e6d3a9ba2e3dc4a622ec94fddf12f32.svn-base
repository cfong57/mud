#include <mudlib.h>

inherit WEAPON;

void extra_create()
{
  set_identified(1);
  set_short("brilliant purple battle axe");
  set_id(({"brilliant purple battle axe","battle axe","axe"}));
  set_long(wrap("This battle axe has been painted a brilliant metallic purple. "+
  "It is double-headed, with acid-covered edges on both ends. The shaft goes "+
  "past the head and narrows to a sharp point. The axe feels well balanced and "+
  "is deadly sharp.\n"));
  set_name("battle axe");
  set_wtype("battle axe");
  set_material("steel");
  set_quality(10);
  add_magic_property("acid damage",2);
  weapon_setup();

}